<body>
    <h1>Date and Time Viewer</h1>
    <button onclick="showDateTime()">Show Current Date and Time</button>
    <p id="datetime"></p>
    <div id="clock" class="clock"></div>
    <div id="greeting"></div>

    <script>
        function showDateTime() {
            const now = new Date().toLocaleString();
            document.getElementById("datetime").textContent = "Current Date and Time: " + now;
        }

        function updateClock() {
            const time = new Date().toLocaleTimeString();
            document.getElementById("clock").textContent = "Live Time: " + time;
        }

        function updateGreeting() {
            const hours = new Date().getHours();
            let greeting = "";
            if (hours < 12) {
                greeting = "Good Morning!";
            } else if (hours < 18) {
                greeting = "Good Afternoon!";
            } else {
                greeting = "Good Evening!";
            }
            document.getElementById("greeting").textContent = greeting;
        }

        setInterval(updateClock, 1000);
        updateGreeting();
    </script>
</body>
